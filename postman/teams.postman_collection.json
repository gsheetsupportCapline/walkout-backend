  "item": [
    {
      "name": "Get All Teams",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.data && response.data.length > 0) {",
              "        pm.collectionVariables.set('team_id', response.data[0]._id);",
              "        pm.environment.set('team_id', response.data[0]._id);",
              "        console.log('✓ Team ID automatically saved');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/teams",
          "host": ["{{base_url}}"],
          "path": ["api", "teams"]
        },
        "description": "Get all teams (requires authentication)"
      },
      "response": []
    },
