        },
        "url": {
          "raw": "{{base_url}}/api/users/login",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "login"]
        },
        "description": "Login with email and password. Returns JWT token that is automatically saved for subsequent requests."
