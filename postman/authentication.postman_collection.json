{
  "info": {
    "_postman_id": "auth-001",
    "name": "Authentication",
    "description": "User authentication endpoints - signup and login with automatic token management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Signup",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (response.token) {",
              "        pm.collectionVariables.set('auth_token', response.token);",
              "        pm.environment.set('auth_token', response.token);",
              "        console.log('✓ Token automatically saved');",
              "    }",
              "    if (response.data && response.data._id) {",
              "        pm.collectionVariables.set('user_id', response.data._id);",
              "        pm.environment.set('user_id', response.data._id);",
              "        console.log('✓ User ID automatically saved');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123\",\n  \"role\": \"user\",\n  \"region\": \"{{region_id}}\",\n  \"office\": \"{{office_id}}\",\n  \"team\": \"{{team_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/signup",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "signup"]
        },
        "description": "Register a new user. Returns JWT token that is automatically saved for subsequent requests."
      },
      "response": [
        {
          "name": "Success - User Created",
          "originalRequest": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123\",\n  \"role\": \"user\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/users/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "signup"]
            }
          },
          "status": "Created",
          "code": 201,
          "_postman_previewlanguage": "json",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "cookie": [],
          "body": "{\n  \"success\": true,\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"data\": {\n    \"_id\": \"65f1a2b3c4d5e6f7g8h9i0j1\",\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"role\": \"user\",\n    \"isActive\": true\n  }\n}"
        }
      ]
    },
    {
      "name": "User Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.token) {",
              "        pm.collectionVariables.set('auth_token', response.token);",
              "        pm.environment.set('auth_token', response.token);",
              "        console.log('✓ Token automatically saved');",
              "    }",
              "    if (response.data && response.data._id) {",
              "        pm.collectionVariables.set('user_id', response.data._id);",
