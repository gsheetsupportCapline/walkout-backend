              "    }",
              "    if (response.data && response.data.role) {",
              "        pm.collectionVariables.set('user_role', response.data.role);",
              "        pm.environment.set('user_role', response.data.role);",
              "        console.log('✓ User Role automatically saved');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
