            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/regions/{{region_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "regions", "{{region_id}}"]
        },
        "description": "Delete region (Admin/SuperAdmin only)"
      },
      "response": []
