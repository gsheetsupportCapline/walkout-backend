          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"North Region Updated\",\n  \"code\": \"NR-01\",\n  \"description\": \"Updated description for northern region\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/regions/{{region_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "regions", "{{region_id}}"]
