{
  "info": {
    "_postman_id": "regions-001",
    "name": "Regions",
    "description": "Region management endpoints - CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Regions",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.data && response.data.length > 0) {",
              "        pm.collectionVariables.set('region_id', response.data[0]._id);",
              "        pm.environment.set('region_id', response.data[0]._id);",
              "        console.log('✓ Region ID automatically saved');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/regions",
          "host": ["{{base_url}}"],
          "path": ["api", "regions"]
        },
        "description": "Get all regions (requires authentication)"
      },
      "response": []
    },
    {
      "name": "Get Region by ID",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/regions/{{region_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "regions", "{{region_id}}"]
        },
        "description": "Get region details by ID"
      },
      "response": []
    },
    {
      "name": "Create Region",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (response.data && response.data._id) {",
              "        pm.collectionVariables.set('region_id', response.data._id);",
              "        pm.environment.set('region_id', response.data._id);",
              "        console.log('✓ Region ID automatically saved');",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"North Region\",\n  \"code\": \"NR\",\n  \"description\": \"Northern region covering all northern offices\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/regions",
          "host": ["{{base_url}}"],
          "path": ["api", "regions"]
        },
        "description": "Create a new region (Admin/SuperAdmin only)"
      },
      "response": []
    },
    {
